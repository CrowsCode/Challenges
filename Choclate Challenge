
public class SubClass {
	public int money;
	public int leftOver;
	public int id;

	public SubClass(int money) {
		this.money = money;
	}

	public void buyBooks() {
		while (money >= 1) {
			money = money - 1;
			id++;
			leftOver++;
			System.out.println("Bought book: " + id);
		}
	}

	public void useLeftOver() {
		while (leftOver >= 3) {
			leftOver = leftOver - 3;
			leftOver++;
			id++;
			System.out.println("Used left overs to buy book: " + id);
		}
	}
}
